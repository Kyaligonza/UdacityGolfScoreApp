<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ballononredtea"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".MainActivity">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="4dp"
                android:text="Golfer A"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/golfer_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:padding="4dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="4dp"
                android:onClick="addFiveForTeamA"
                android:text="Albatross" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="addFourForTeamA"
                android:text="Eagle" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="addThreeForTeamA"
                android:text="Birdie" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="addTwoForTeamA"
                android:text="Par" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="addOneForTeamA"
                android:text="Bogey" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="addOneForBonusA"
                android:text="Bonus" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".MainActivity">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="4dp"
                android:text="Golfer B"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/golfer_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:padding="4dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="4dp"
                android:onClick="addFiveForTeamB"
                android:text="Albatross" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="addFourForTeamB"
                android:text="Eagle" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="addThreeForTeamB"
                android:text="Birdie" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="addTwoForTeamB"
                android:text="Par" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="addOneForTeamB"
                android:text="Bogey" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="addOneForBonusB"
                android:text="Bonus" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="setToZero"
        android:text="RESET" />

    <TextView
        android:id="@+id/handicapA"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="4dp"
        android:background="#FF9800"
        android:gravity="center"
        android:padding="6dp"
        android:text="36"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/HCA"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_above="@id/handicapA"
        android:layout_marginLeft="24dp"
        android:padding="4dp"
        android:text="HC"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/golfer_a_score_final"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@id/handicapA"
        android:background="#FF9800"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:padding="4dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textForScoreA"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_above="@id/handicapA"
        android:layout_toRightOf="@id/handicapA"
        android:fontFamily="sans-serif-light"
        android:padding="4dp"
        android:text="Score"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="15sp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_above="@id/golfer_a_score_final"
        android:layout_toRightOf="@id/golfer_a_score_final"
        android:fontFamily="sans-serif-light"
        android:padding="4dp"
        android:text="Bonus"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/golfer_a_score_bonus"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_toRightOf="@id/golfer_a_score_final"
        android:background="#FF9800"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:padding="4dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/handicapB"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="24dp"
        android:background="#FF9800"
        android:gravity="center"
        android:padding="4dp"
        android:text="20"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/HCB"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_above="@id/handicapB"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:padding="4dp"
        android:text="HC"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textForScoreB"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_above="@id/handicapB"
        android:layout_toLeftOf="@id/handicapB"
        android:fontFamily="sans-serif-light"
        android:padding="4dp"
        android:text="Score"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/golfer_b_score_final"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@id/handicapB"
        android:background="#FF9800"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:padding="4dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/golfer_b_score_bonus"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_toLeftOf="@id/golfer_b_score_final"
        android:background="#FF9800"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:padding="4dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_above="@id/golfer_b_score_final"
        android:layout_toLeftOf="@id/golfer_b_score_final"
        android:fontFamily="sans-serif-light"
        android:padding="4dp"
        android:text="Bonus"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="15sp" />

</RelativeLayout>